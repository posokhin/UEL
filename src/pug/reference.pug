<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title UEL
        link(rel="stylesheet", href="style.css")
    body
        .wrapper
            include _header
            section.about
                .background-line
                    .background-line__item.background-line__item-1
                    .background-line__item.background-line__item-2
                    .background-line__item.background-line__item-3
                    .background-line__item.background-line__item-4
                    .background-line__item.background-line__item-5
                    .background-line__item.background-line__item-6
                    .background-line__item.background-line__item-7
                .back-title.back-title--animate pioneer
                .container
                    .about__row.flex-wrap
                        .about__col.about__col--sidebar
                            include _aside
                            ul.sidebar__list
                                +sidebar('О бренде')
                                +sidebar('Статьи')
                                +sidebar('Отзывы')
                                +sidebar('Референс-лист', 'active')
                                +sidebar('Сертификаты')
                        .about__col.about__col--content
                            .about__content
                                .detail-tabs__wrapper.about__tabs
                                    ul.detail-tabs__list.flex
                                        li.detail-tabs__item
                                            a(href="").detail-tabs__link О бренде
                                        li.detail-tabs__item
                                            a(href="").detail-tabs__link Статьи
                                        li.detail-tabs__item
                                            a(href="").detail-tabs__link Отзывы
                                        li.detail-tabs__item.detail-tabs__item--active.active
                                            a(href="").detail-tabs__link Референс-лист 
                                        li.detail-tabs__item
                                            a(href="").detail-tabs__link Сертификаты
                                .reference
                                    .reference__content
                                        h2.reference__title Медицинские учреждения
                                        ul.reference__list.flex-wrap
                                            -for(var i = 1; i < 5; i++)
                                                li.reference__item
                                                    a(href="").reference__link
                                                        .reference__image
                                                            img(src="img/ref/"+i+".png", alt="")
                                                        .reference__item-title ФГБУ «Лечебно-оздоровительный комплекс «Елочки»
                                                        .reference__item-city г. Домодедово
                                    .reference__content
                                        h2.reference__title Административно-офисные здания
                                        ul.reference__list.flex-wrap
                                            -for(var i = 1; i < 5; i++)
                                                li.reference__item
                                                    a(href="").reference__link
                                                        .reference__image
                                                            img(src="img/ref/"+i+".png", alt="")
                                                        .reference__item-title ФГБУ «Лечебно-оздоровительный комплекс «Елочки»
                                                        .reference__item-city г. Домодедово
                                    .reference__content
                                        h2.reference__title Жилые объекты
                                        ul.reference__list.flex-wrap
                                            -for(var i = 1; i < 5; i++)
                                                li.reference__item
                                                    a(href="").reference__link
                                                        .reference__image
                                                            img(src="img/ref/"+i+".png", alt="")
                                                        .reference__item-title ФГБУ «Лечебно-оздоровительный комплекс «Елочки»
                                                        .reference__item-city г. Домодедово
        include _footer
        script(src="js/jquery.min.js")
        script(src="js/ion.rangeSlider.min.js")
        script(src="js/swiper.min.js")
        script(src="js/main.js")
                    