                                    span 4
                            li.selection__calc-rooms-item
                                label(for="5")
                                    input(type="radio" name="1" id="5")
                                    span 5
                    ul.selection__calc-range.flex-wrap.jcsb
                        li.selection__calc-range-item
                            .selection__calc-range-item-title Площадь помещения, м²
                            .selection__calc-range-item-input
                                input(type="text" value="0")
                                .selection__calc-range-item-input-slider
                                    input(type="text" value="0").range
                        li.selection__calc-range-item
                            .selection__calc-range-item-title Высота потолка, м
                            .selection__calc-range-item-input
                                input(type="text" value="0")
                                .selection__calc-range-item-input-slider
                                    input(type="text" value="0").range
                    ul.selection__calc-checkbox.flex-wrap.jcsb
                        li.selection__calc-checkbox-item
                            .selection__calc-checkbox-item-title Степень освещенности солнечными лучами (инсоляция)
                            ul.selection__calc-checkbox-item-sublist.flex-wrap.jcsb
                                li.selection__calc-checkbox-item-sublist-item
                                    label(for="6")
                                        input(type="radio" name="2" id="6")
                                        span Слабая
                                li.selection__calc-checkbox-item-sublist-item
                                    label(for="7")
                                        input(type="radio" name="2" id="7")
                                        span Сильная
                        li.selection__calc-checkbox-item
                            .selection__calc-checkbox-item-title Наличие жалюзи или плотных штор
                            ul.selection__calc-checkbox-item-sublist.flex-wrap.jcsb
